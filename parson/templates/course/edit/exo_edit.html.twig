{% extends 'base.html.twig' %}

{% block title %} Modifier un Exo {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/courses.css') }}">
{% endblock %}
{% block body_content %}


    <div class="mt-3 col-lg-6 col-md-8 col-sm-12 mx-auto text-center">
    <div class="body-container">
        <div class="row mt-2 course-img-container">
            <img src="{{ asset('img/course.png') }}" class="course-img" alt="">
        </div>
        {{ form_start(courseForm) }}
        {{ form_row(courseForm.title,{
            attr: {
                placeholder: 'Titre de l\'exo ',
                class : 'text-center'
            }
        }) }}
        {{ form_row(courseForm.question,{
            attr: {
                placeholder: 'Question',
                class : 'text-center'
            }
        }) }}
        {{ form_row(courseForm.type,{
            attr: {
                placeholder: 'Type d`\'exo',
                class : 'text-center'
            }
        }) }}
        <button type="submit" class="btn btn-dark btn-lg">
            Valider
        </button>
        {{ form_end(courseForm) }}
    </div>





{% endblock %}