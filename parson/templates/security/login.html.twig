{% extends 'base.html.twig' %}

{% block title %} Utilisateurs ! {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body_content %}
    <div class="col-lg-6 mx-auto mt-5 pt-1 body-container">

        <div class="col-12 text-center ">

            <div class=" py-5 col-12 text-dark ">

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form  class="form-signin" method="POST">

                    <div class="row mt-2 login-img-container">
                        <img src="{{ asset('img/user_login_img.png') }}" class="login-img" alt="">
                    </div>

                    <div class="row mx-4 mt-3">
                        <input type="text" class="form-control text-center" name="email"
                               placeholder="Email" value="{{ last_username }}">
                    </div>

                    <div class="row my-3 mx-4">
                        <input type="password" class="form-control text-center" name="password" placeholder="Mot De Passe">
                    </div>

                    <input type="hidden" value="{{ csrf_token('authenticate') }}" name="_csrf_token">
                    <div class="checkbox my-3">
                        <label>
                            <input type="checkbox" class="mr-1 ml-5" name="_remember_me">
                            Se souvenir de moi
                        </label>
                    </div>

                    <button class="btn btn-outline-dark btn-lg " type="submit">
                        Connexion
                    </button>

                    <div class="register ">
                        Pas encore inscrits ?
                        <a href="{{ path('app_register') }}" class="text-dark">
                            <b>
                                Inscription
                            </b>
                        </a>
                    </div>

                </form>


                <!-- <div class="btn_">
                    <a href="/register" class="btn"> Commencer ! </a>
                </div> -->
            </div>

        </div>

    </div>

{% endblock %}

